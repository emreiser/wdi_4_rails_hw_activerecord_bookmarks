<h2>EDIT BOOKMARK</h2>
<div id='form'>
	<%= form_for @bookmark do |form| %>
		<%= form.text_field :name, value: @bookmark.name %>
		<%= form.text_field :comment, placeholder: 'Comment (optional)' %>
		<%= form.submit 'Update Bookmark', class: 'button' %>
		<br>
		<%= form.text_field :url, placeholder: 'Paste full URL here' %>
		<%= form.label(:favorite) %>
		<%= form.check_box :favorite %>
	<% end %>
</div>